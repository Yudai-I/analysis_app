<table class="table table-Hoverable">
  <thead>
  <tr>
  <th>product</th>
  <th>review</th>
  <th></th>
  </tr>
</thead>
<tbody>
  <% reviews.each do |review| %>
  <tr>
<td><%= link_to "#{review.product_name}", "#{review.link}" %></td>
<td><%= review.review %></td>
<% if review.user_id == current_user.id %>
<td><%= link_to "Destroy", review_path(review), method: :delete, class: 'btn btn-danger' %></td>
<% end %>
  </tr>
  <% end %>
  </tbody>
</table>