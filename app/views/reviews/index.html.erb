<div class="container">
  <div class="row d-flex justify-content-center align-items-center">

    <% if @ans.present? %>
    <div>商品名：<%= @product %></div>
    <%= form_with model: @review, local: true do |f| %>
    <%= f.text_area :review, value: @ans %>
    <%= f.text_field :link, value: @url %>
    <%= f.text_field :product_name, value: @product %>
    <%= f.text_area :image_url, value: @image_url %>
    <%= f.submit "マイページに追加", class: "btn btn-outline-dark" %>
    <% end %>
    <% end %>

<div class="col-lg-12"> <!-- テキストフィールド用の列 -->
      <%= form_with url: reviews_path, local: true, method: :get do |f| %>
        <div class="form">
          <%= f.text_field :url, class: "form-control", placeholder: "URLを入力してください" %>
        </div>
        <div class="form">
        <%= f.submit "分析する", class: "btn btn-outline-dark btn-block btn-lg" %>
        </div>
        <% end %>
    </div>

  </div>
</div>
